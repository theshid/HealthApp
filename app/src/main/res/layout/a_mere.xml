<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".app.views.AddPatientActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="100dp"
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/signUpHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La Mere"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.105"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/signUph2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Consultation Postnatale"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/signUpHeader"
                app:layout_constraintTop_toBottomOf="@+id/signUpHeader" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="20dp"
              android:orientation="horizontal">
              <TextView
                  android:layout_marginStart="40dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Examen general"/>
              <TextView
                  android:id="@+id/voir"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Voir plus"
                  android:textColor="@color/light_blue"
                  android:gravity="end"
                  android:layout_gravity="end"
                  android:layout_marginStart="150dp"/>

          </LinearLayout>

            <include
                android:id="@+id/included_layout"
                layout="@layout/a_mere_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expand_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examen de la mere"/>
                <TextView
                    android:id="@+id/voir2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir plus"
                    android:textColor="@color/light_blue"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginStart="130dp"/>

            </LinearLayout>

            <include
                android:id="@+id/included_layout2"
                layout="@layout/a_mere_examen_mere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expand_button" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Examen obstetrical"/>
                <TextView
                    android:id="@+id/voir3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voir plus"
                    android:textColor="@color/light_blue"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_marginStart="130dp"/>

            </LinearLayout>

            <include
                android:id="@+id/included_layout3"
                layout="@layout/a_mere_examen_obs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expand_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesures Preventives"/>

                <TextView
                    android:id="@+id/voir4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginStart="120dp"
                    android:gravity="end"
                    android:text="Voir plus"
                    android:textColor="@color/light_blue" />

            </LinearLayout>

            <include
                android:id="@+id/included_layout4"
                layout="@layout/a_mere_mesure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expand_button" />
            <EditText
                android:id="@+id/carte_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/editfield"
                android:ems="10"
                android:hint="Observations"
                android:inputType="textMultiLine"
                android:paddingStart="20dp"
                android:lines="5"
                android:longClickable="false"
                android:textColor="@color/black"
                android:paddingRight="15dp"
                android:textColorHint="@android:color/darker_gray"
                />



            <EditText
                android:clickable="true"
                android:focusable="true"
                android:drawablePadding="5dp"
                android:id="@+id/ethny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/editfield"
                android:ems="10"
                android:hint="Interventions"
                android:inputType="textMultiLine"
                android:lines="5"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                />



            <TextView
                android:clickable="true"
                android:focusable="true"
                android:drawablePadding="5dp"
                android:id="@+id/patient_niveau_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Rdv pour la prochaine CPoN tardive"
                android:textSize="17sp"
                android:inputType="text"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                />



            <EditText
                android:clickable="true"
                android:focusable="true"
                android:drawableEnd="@drawable/ic_calendar"
                android:drawablePadding="5dp"
                android:id="@+id/patient_situation_matri"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/editfield"
                android:ems="10"
                android:hint="21 janvier 2023"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@android:color/darker_gray"
                />





            <Button
                android:id="@+id/btn_next"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/primary_button"
                android:text="Enregistrer"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>